<form method="POST" action="/figures">
<label>Name <input type="text" id="figure_name" name="figure[name]"></label>

<h2>Titles</h2>
<% Title.all.each do |t| %>
<%= t.name %>
<input type="checkbox" id="title_<%= t.id %>" name="figure[title_ids][]" value="<%= t.id %>"><br>
<% end %>

<h2>Create New Title:</h2>
<input type="text" id="new_title" name="title[name]"><br>


<h2>Landmarks</h2>
<% Landmark.all.each do |l| %>
<%= l.name %>
<input type="checkbox" id="landmark_<%= l.id %>" name="figure[landmark_ids][]" value="<%= l.id %>"><br>
<% end %>

<h2>Create New Landmark:</h2>
<label>Name: <input type="text" id="new_landmark" name="landmark[name]"></label>
<label>Year: <input type="text" name="landmark[year_completed]"></label>
<input type="submit" value="Create New Figure">
</form>