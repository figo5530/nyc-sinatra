<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form method="POST" action="/landmarks/<%= @landmark.id %>">
<input type="hidden" name="_method" value="patch">
<label>Name: <input type="text" id="name" name="landmark[name]" value="<%= @landmark.name %>"></label>
<label>Year: <input type="text" id="year_completed" name="landmark[year_completed]" value="<%= @landmark.year_completed.to_s %>"></label>
<input type="submit" value="Edit Landmark">
</form>
<a class="button" href="/landmarks">Landmarks</a>
